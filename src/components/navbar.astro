---
// Navbar.astro
---

<nav>
    <div class="navbar-container">
      <div class="navbar-brand">
        <a href="/">Piensa</a>
      </div>
      <div class="navbar-links">
        <a href="/">Home</a>
        <a href="/problematica">Problematica</a>
        <a href="/propuesta">Propuesta</a>
        <a href="/resultados">Resultados</a>
      </div>
    </div>
  </nav>
  
  <style>
    nav {
      background-color: #333;
      padding: 1rem;
    }
  
    .navbar-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
    }
  
    .navbar-brand a {
      color: white;
      font-size: 1.5rem;
      text-decoration: none;
      font-weight: bold;
    }
  
    .navbar-links {
      display: flex;
      gap: 1rem;
    }
  
    .navbar-links a {
      color: white;
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: 4px;
      transition: background-color 0.3s ease;
    }
  
    .navbar-links a:hover {
      background-color: #555;
    }
  </style>